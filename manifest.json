{
  "manifest_version": 2,

  "name": "Jira Board Horizontal Scrolling",
  "description": "Adds scrolling to Jira Agile boards",
  "version": "1.5",


  "permissions": [
    "activeTab"
  ],

  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": ["https://dollarshaveclub.atlassian.net/secure/RapidBoard.jspa*"],
      "css": ["agileboard.css"],
      "js": [
        "iscroll-lite.js",
        "agile-board-scroll.js"
      ]
    }
  ]
}
